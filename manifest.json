{
    "manifest_version": 3,
    "name": "AutoFile for Canvas",
    "version": "1.0",
    "description": "Select and download attachments on Canvas.",
    "permissions": ["downloads", "activeTab", "scripting", "storage"],
    "host_permissions": [
      "https://canvas.auckland.ac.nz/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png"
        }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "type": "module"
      }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "web_accessible_resources": [{
        "resources": ["libs/*", "public/*"],
        "matches": ["<all_urls>"]
    }],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}