{
    "manifest_version": 3,
    "name": "Autofile for Canvas",
    "version": "1.0",
    "description": "Select and download attachments on Canvas.",
    "permissions": ["downloads", "activeTab", "scripting", "storage"],
    "host_permissions": [
      "https://canvas.auckland.ac.nz/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "type": "module"
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "web_accessible_resources": [{
      "resources": ["libs/*", "public/*"],
      "matches": ["<all_urls>"]
    }]
}